<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Twilio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/bg_border_view_white</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorHint">@color/app_gray_dark</item>
    </style>


    <style name="LoginButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:background">@drawable/bg_circle_gradient_blue</item>
    </style>


    <style name="AppTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="SubTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="SubTitleBorder">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/bg_border_blue</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="HistoryDateTime">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="SubTitleView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/app_blue_light</item>
    </style>

    <style name="InfoSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="InfoTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_white</item>
    </style>


    <style name="CreateAccountSub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/app_gray_dark</item>
    </style>

    <style name="CreateAccountMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_border_gray</item>
        <item name="android:textColor">@color/app_blue_dark</item>

    </style>


    <style name="ProfileDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_gray_dark</item>

    </style>


    <style name="ProfileMenu">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/app_blue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/app_blue_light</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>

    </style>


    <style name="View_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="View_Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="PrimaryButton_Positive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
        <item name="android:background">@drawable/bg_circle_blue</item>
    </style>


    <style name="PrimaryButton_Positive_WithoutArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:background">@drawable/bg_circle_blue</item>
    </style>


    <style name="PrimaryButton_Negative">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:drawableLeft">@mipmap/ic_left_arrow</item>
        <item name="android:background">@drawable/bg_circle_gray</item>
    </style>

    <style name="PrimaryButton_Negative_WithoutArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:background">@drawable/bg_circle_gray</item>
    </style>


    <style name="SessionInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_blue_dark</item>

    </style>


    <!--DatePicker Theme-->
    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_blue_dark</item>
        <item name="colorControlActivated">@color/app_blue_light</item>
        <item name="colorControlHighlight">@color/app_blue_dark</item>
    </style>


    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButton_Double">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogMessage">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="InflateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Progressbar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/app_white</item>
    </style>

    <style name="ProviderInfo">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>


    <style name="UserInfoTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="UserInfoSubTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_marginTop">1.5dp</item>
    </style>

    <!--Image Picker-->
    <style name="PixAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/app_blue_light</item>
        <item name="colorSwitchThumbNormal">@color/app_gray</item>
        <item name="android:colorForeground">@color/app_gray</item>
    </style>

    <!--Stripe-->

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:background">@color/app_white</item>
        <item name="editTextStyle">@style/StripEditText</item>
        <item name="android:editTextStyle">@style/StripEditText</item>
    </style>

    <style name="StripEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textColorHint">@color/app_gray_dark</item>
    </style>

</resources>
